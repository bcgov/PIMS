{
  "BaseUrl": "/api",
  "HealthChecks": {
    "Port": "8080",
    "LivePath": "/api/health/live",
    "ReadyPath": "/api/health/ready"
  },
  "HealthChecksUI": {
    "UIPath": "/api-health/healthchecks-ui",
    "ApiPath": "/api-health",
    "UseRelativeApiPath": false,
    "ResourcesPath": "/api-health/ui/resources",
    "UseRelativeResourcesPath": false,
    "WebhookPath": "/api-health/hooks",
    "UseRelativeWebhookPath": false,
    "HealthChecks": [
      {
        "Name": "liveliness",
        "Uri": "http://localhost:8080/api/health/live"
      },
      {
        "Name": "readiness",
        "Uri": "http://localhost:8080/api/health/ready"
      }
    ],
    "Webhooks": [
      {
        "Name": "RocketChat",
        "Uri": "overwrite with env vars",
        "Payload": "{\"text\":\"The HealthCheck [[LIVENESS]] is failing with the error message [[FAILURE]]. [[DESCRIPTIONS]].\"}",
        "RestoredPayload": "{\"text\":\"The HealthCheck [[LIVENESS]] is now passing.\"}"
      }
    ],
    "EvaluationTimeInSeconds": 10,
    "MinimumSecondsBetweenFailureNotifications": 60
  },
  "Swagger": {
    "RoutePrefix": "api-docs",
    "RouteTemplate": "/api-docs/swagger/{documentname}/swagger.json",
    "EndpointPath": "/api-docs/swagger/{0}/swagger.json"
  },
  "https_port": 443,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "System.Net.Http.HttpClient": "Error",
      "HealthChecks.UI": "Error"
    }
  },
  "AllowedHosts": "*",
  "Pims": {
    "ServiceAccount": {
      "Email": "support@pims.com"
    }
  },
  "Keycloak": {
    "Authority": "http://keycloak:8080/auth/realms/pims",
    "Audience": "pims-api",
    "Secret": "[USE SECRETS]",
    "Client": "pims-api",
    "ServiceAccount": {
      "Audience": "pims-service-account",
      "Secret": "[USE SECRETS]",
      "Client": "pims-service-account"
    },
    "OpenIdConnect": {
      "Login": "/protocol/openid-connect/auth",
      "Logout": "/protocol/openid-connect/logout",
      "Register": "/protocol/openid-connect/registrations",
      "Token": "/protocol/openid-connect/token",
      "TokenIntrospect": "/protocol/openid-connect/token/introspect",
      "UserInfo": "/protocol/openid-connect/userinfo"
    },
    "Admin": {
      "Authority": "http://keycloak:8080/auth/admin/realms/pims",
      "Users": "/users"
    }
  },
  "ConnectionStrings": {
    "PIMS": "Server=pims-db-prod,1433;User ID=admin;Database=pims"
  }
}
