FROM image-registry.apps.silver.devops.gov.bc.ca/354028-tools/nodejs:18.17.1-bullseye-slim

# Set the working directory to /app
WORKDIR /app
ENV NODE_ENV=production
ENV CONTAINERIZED=true

# Copy files
COPY ./src ./src
COPY ./public ./public
COPY package.json .
COPY tsconfig.json .
COPY vite.config.ts .
COPY ./index.html .

# Npm install packages. Omits dev dependencies when NODE_ENV=production
RUN npm set progress=false
RUN npm i

EXPOSE 8080

# Build the project.
RUN npm run build
